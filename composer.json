{
    "name": "liangguifeng/easy-alisdk",
    "type": "library",
    "description": "An Alibaba cloud's Alipay Function Expansion Kit, according to the official new version of SDK, is upgrading and upgrading, supporting the opening of API interface to Alipay, which is easy to develop small programs, intelligent business circles, payment points, car owners' services, security, payment and other related functions.",
    "license": "MIT",
    "keywords": [
        "php",
        "alibaba",
        "aliyun",
        "alipay",
        "sdk",
        "easy-alisdk",
        "Alipay API"
    ],
    "authors": [
        {
            "name": "liangguifeng",
            "email": "1476982312@qq.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "alibabacloud/tea": "^3.1",
        "alibabacloud/tea-fileform": "^0.3.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "EasyAliSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    }
}